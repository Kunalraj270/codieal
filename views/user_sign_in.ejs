<link rel="stylesheet" href="/css/user_sign_up.css">
<div class="flex items-center min-h-screen p-4  lg:justify-center">
  <div
    class="flex flex-col overflow-hidden bg-white rounded-3xl shadow-lg max md:flex-row md:flex-1 lg:max-w-screen-md">
    <div
      class="p-4 py-6 text-white  bg-slate-700 md:w-80 md:flex-shrink-0 md:flex md:flex-col md:items-center md:justify-evenly">
      <p class="flex flex-col items-center justify-center mt-10 text-center">
      <h2 class="text-2xl font-bold">Every New Friend Is A New Adventure</h2>
      <span class="text-xl font-bold">Let's Get Connected</span>

      </p>
    </div>
    <div class="p-5 bg-white md:flex-1">
      <ul class="dyanmic-texts">
        <li><span>Welcome Back!!</span></li>
      </ul>
      <!-- <i class="bi bi-eye-slash  text-2xl absolute mb-28 ml-80 py-5 px-14 mt-72 cursor-pointer " id="togglePassword"></i> -->
      <a href="/users/auth/google"
        class="flex items-center shadow-md justify-center mt-5 font-bold px-4 py-2 space-x-2 transition-colors duration-300  rounded-md group hover:bg-gray-200 focus:outline-none">
        <span>
          <img class="w-7 h-7 font-bold" src="/images/google-logo.png" alt="google">
        </span>
        <span class="text-sm font-large">Sign In with Google</span>
      </a>
      <a href="/users/auth/github"
        class="flex items-center shadow-md justify-center mt-5 font-bold px-4 py-2 space-x-2 transition-colors duration-300  rounded-md group hover:bg-gray-200 focus:outline-none">
        <span>
          <img class="w-7 h-7 font-bold" src="/images/github.png" alt="github">
        </span>
        <span class="text-sm font-large">Sign In with Github</span>
      </a>
      <div class="flex flex-col space-y-6">
        <span class="flex items-center justify-center space-x-2">
          <span class="h-px bg-gray-400 w-14 mt-5"></span>
          <span class="font-normal text-gray-500 mt-5">or login with Email</span>
          <span class="h-px bg-gray-400 w-14 mt-5"></span>
        </span>
        <div class="flex flex-col space-y-4">
          <!-- form -->
          <form action="/users/create-session" method="POST" class="flex flex-col space-y-5">
            <div class="flex flex-col space-y-1">
              <label for="email" class="text-sm font-semibold text-gray-500">Email address</label>
              <input type="email" id="email" name="email" required autofocus
                class="px-4 py-2 transition duration-300 border border-gray-300 rounded outline-none bg-gray-200" />
            </div>
            <div class="flex flex-col space-y-1">
              <div class="flex items-center justify-between">
                <label for="password" class="text-sm font-semibold text-gray-500">Password</label>
                <a href="#" class="text-sm text-blue-600 hover:underline focus:text-blue-800">Forgot Password?</a>
              </div>
              <input type="password" id="password" name="password" required
                class="px-4 py-2 transition duration-300 border border-gray-300 rounded bg-gray-200" />
            </div>
            <div class="flex items-center space-x-2">
              <input type="checkbox" id="remember"
                class="w-4 h-4 transition duration-300 rounded focus:ring-2 focus:ring-offset-0 focus:outline-none focus:ring-blue-200" />
              <label for="remember" class="text-sm font-semibold text-gray-500">Remember me</label>
            </div>
            <div>
              <button type="submit"
                class="w-full px-4 py-2 text-lg font-semibold text-white transition-colors duration-300 bg-blue-500 rounded-md shadow hover:bg-blue-600 focus:outline-none focus:ring-blue-200 focus:ring-4">
                Log in
              </button>
            </div>
            <div class="flex flex-col space-y-6">
              <span class="flex items-center justify-center space-x-2">
                <span class="h-px bg-gray-400 w-14 mt-5"></span>
                <span class="font-normal text-gray-500 mt-5"><a href="/users/sign-up" class="hover:text-black">or sign
                    Up</a></span>
                <span class="h-px bg-gray-400 w-14 mt-5"></span>
              </span>
              <div class="flex flex-col space-y-4">

              </div>
            </div>
          </form>
        </div>
      </div>
    </div>

    <script src="/js/user_sign_in.js"></script>