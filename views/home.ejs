<h1 style="text-align:center; margin-top: 100px;">
    Codieal / <%= title %>
</h1>

<section id="feed-posts">
    <h4>Post</h4>
    <% if(locals.user) { %>
        <form action="/posts/create" id="new-form-post" method="POST">
            <textarea name="content" id="" cols="30" rows="10" placeholder="Write Somethiing Here....." required></textarea>
            <input type="submit" value="Post">
        </form>
        <% } %>
            <div id="post-container-list">
                <ul>
                    <% for( post of posts) { %>
                        <li>
                            <p>>
                                <%= post.content %>
                                    <br>

                                    <small>
                                        <%= post.user.name %>
                                    </small>
                            </p>
                            <div class="post-comment">
                                <% if(locals.user) { %>
                                    <form action="/comments/create" method="POST">
                                        <input type="text" name="content" id=""
                                            placeholder="Type here to add comment..." required>
                                        <input type="hidden" name="post" value="<%= post._id %>">
                                        <input type="submit" value="Add Comment">
                                    </form>
                                    <% } %>
                                        <div class="posts-comment-list">
                                            <ul id="post-comment">
                                                <% for(comment of post.comments) { %>
                                                 <p>
                                                    <%= comment.content%>
                                                    <br>
                                                    <small>
                                                        <%= comment.user.name%>
                                                    </small>
                                                 </p>
                                                    <%}%>
                                            </ul>
                                        </div>
                            </div>
                        </li>

                        <% } %>
                </ul>
            </div>
</section>

