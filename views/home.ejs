<h1 style="text-align:center; margin-top: 100px;">
    Codieal / <%= title %>
</h1>

<section id="feed-posts">
    <h4>Post</h4>
    <% if(locals.user) { %>
    <form action="/posts/create" id="new-form-post" method="POST">
        <textarea name="content" id="" cols="30" rows="10" placeholder="Write Somethiing Here....."></textarea>
        <input type="submit" value="Post">
    </form>
     <% } %>
    <div id="post-container-list">
        <ul>
            <% for( post of posts) { %>
                <p>
                    <li>
                        <%= post.content %>
                            <br>

                            <small>
                                <%= post.user.name %>
                            </small>
                    </li>
                </p>
                <% } %>
        </ul>
    </div>
</section>

