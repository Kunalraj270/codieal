<link rel="stylesheet" href="/css/home.css">
<h1>
    Codieal / <%= title %>
</h1>

<section id="feed-posts">
    <h4>Posts</h4>
    <% if(locals.user){ %>
    <form action="/posts/create" id="new-post-form" method="POST">
        <textarea name="content" cols="30" rows="3" placeholder="What's on you mind,<%=user.name%>?" required></textarea>
        <input type="submit" value="Post">
    </form>
    <% } %>

    <div id="posts-list-container">
        <ul>
            <% for(post of posts){ %>
                
           <%- include('_post'); -%>
                
            <%} %>
        </ul>
    </div>
</section>
